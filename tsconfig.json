{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "noErrorTruncation": true,
    "paths": {
      "@pages": ["pages"],
      "@services": ["services"],
      "@context": ["context"],
      "@components": ["components"],
      "@utils": ["utils"],
      "@hooks": ["hooks"],
      "@helpers": ["helpers"],
      "@models": ["models"],
      "@stores": ["stores"],
      "@const": ["constants"],
      "@tests": ["../tests"],
      "@db-types": ["../supabase/database.types"],
      "@root/*": ["../*"]
    }
  },
  "include": ["src", "tests", "./supabase/database.types.ts"]
}
